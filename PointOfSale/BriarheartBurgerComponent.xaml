<UserControl x:Class="PointOfSale.BriarheartBurgerComponent"
             xmlns:we="clr-namespace:PointOfSale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <ToggleButton Name="NoBun" Height="60" IsChecked="{Binding Path=Bun}" Checked="NoBun_Checked">No Bun</ToggleButton>
            <ToggleButton Name="NoKetchup" Height="60">No Ketchup</ToggleButton>
            <ToggleButton Name="NoMustard" Height="60">No Mustard</ToggleButton>
            <ToggleButton Name="NoPickle" Height="60">No Pickle</ToggleButton>
            <ToggleButton Name ="NoCheese" Height="60">No Cheese</ToggleButton> 
        </StackPanel>
        <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="20" Grid.Row="0" Grid.ColumnSpan ="2">
            Customize
        </TextBlock>
        <Button Name="BackButton" Grid.Row ="2" Click="BackButton_Click">
            &lt;--
        </Button>
        <Button Name="DoneButton" Grid.Row ="2" Grid.Column="1" Click="DoneButton_Click">
            Done
        </Button>
    </Grid>
</UserControl>
