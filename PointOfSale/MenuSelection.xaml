<UserControl x:Class="PointOfSale.MenuSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500" Background="LightSteelBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Width="100" HorizontalAlignment="Left" Click="Button_Click">New Combo</Button>
        <Button Grid.Row="1" FontSize="20" Click="Entree_Click">
            Entree
        </Button>
        <Button Grid.Row="2" FontSize="20" Click="Side_Click">
            Side
        </Button>
        <Button Grid.Row="3" FontSize="20" Click="Drink_Click">
            Drink
        </Button>
    </Grid>
</UserControl>
